@{
    ViewData["Title"] = "Quiz";
}

<h1 class="Title">@ViewData["Title"]</h1>
@model Web.Models.Operations
<div class="CalcMenu">
    <h2>@Model.First  @Model.Operand @Model.Second = ?</h2>
    <form asp-antiforgery="true" asp-action="Quiz" asp-controller="QuizActions" method="post">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <input name="Answer" type="text">  <span asp-validation-for="Answer"></span>
        <br>
        <input type="submit" value="Next" name="Action">
        <input type="submit" value="Finish" name="Action">
        <input style="display:none" name="First" value="@Model.First">
        <input style="display:none" name="Operand" value="@Model.Operand">
        <input style="display:none" name="Second" value="@Model.Second">
    </form>
</div>
